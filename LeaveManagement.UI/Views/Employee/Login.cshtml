@model LeaveManagement.UI.Models.DTO.LoginDto

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/images/Login.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                @{
                    if(@ViewBag.Message != null){
                        <p style="color:red">@ViewBag.Message</p>
                    }
                }
                    <form method ="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="email" asp-for="Email">Email ID</label>
                        <input type="email" id="email" class="form-control form-control-sm " asp-for="Email"/>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="password" asp-for="Password">Password</label>
                        <input type="password" id="password" class="form-control form-control-sm" asp-for="Password" />
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-warning btn-sm text-white ">Login</button>

                </form>
            </div>
        </div>
    </div>
</section>